# Core server configuration
DATABASE_URL=mysql://example-user:example-password@localhost:3306/main
JWT_SECRET=your-jwt-secret-change-in-production
OWNER_OPEN_ID=admin-open-id-optional

# Development login (no external OAuth)
DEV_LOGIN_ENABLED=true
VITE_DEV_LOGIN_ENABLED=true
DEV_USER_ID=dev-user
DEV_USER_NAME=Developer
DEV_USER_EMAIL=dev@example.com

# Client app ID (used in JWT payload; optional)
VITE_APP_ID=local-dev-app

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Optional: UI branding (client only)
VITE_APP_TITLE="XAUUSD Prediction Agent"
VITE_APP_LOGO="https://placehold.co/128x128/E1E7EF/1F2937?text=XAU"

# Server
PORT=3000

# AWS S3 (for server-side storage uploads)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=your-aws-region
# Optional explicit credentials (otherwise use default AWS credentials chain)
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Notifications (Telegram; optional)
# Set both to enable owner notifications via Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id
